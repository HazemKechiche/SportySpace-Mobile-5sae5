<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/image"
        android:orientation="vertical"> <!-- Add your background image here -->


        <!-- TextView for the title -->

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Back"
            android:padding="4dp"
            android:src="@drawable/retour" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="-50dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Add OFFER"
            android:textColor="#074207"
            android:textSize="27sp" />

        <!-- View acting as a separator -->

        <View
            android:id="@+id/separatorView"
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/light_bg"
            android:backgroundTint="#074207" />

        <!-- CardView for content -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/recrutement_add_nom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/light_bg"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="offer name"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/recrutement_add_description"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/light_bg"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:gravity="start"
                android:hint="Description"
                android:inputType="textPersonName"
                android:minHeight="150dp"
                android:padding="15dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/recrutement_add_salaire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/light_bg"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="salaire"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textColor="@color/black" />

            <!-- Change TextView to Button -->
            <EditText
                android:id="@+id/recrutement_add_localisation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/light_bg"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="localisation"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_pub"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#074207"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="PUBLISH OFFER"
                android:textColor="@color/white"
                android:textSize="19sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>