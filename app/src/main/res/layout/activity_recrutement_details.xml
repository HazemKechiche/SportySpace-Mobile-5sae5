<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image">

    <!-- Main LinearLayout should be constrained vertically -->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Back"
            android:padding="4dp"
            android:src="@drawable/retour" />

        <!-- Blog Image -->

        <!-- Blog Title -->
        <TextView
            android:id="@+id/recrutement_details_nomposte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Offer Name"
            android:textColor="#074207"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Blog Author -->
        <TextView
            android:id="@+id/recrutement_details_salaire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Salaire"
            android:textColor="#000000"
            android:textSize="20sp" />

        <!-- Blog Description -->
        <TextView
            android:id="@+id/recrutement_details_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="offer missions"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/recrutement_details_localisation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Localisation"
            android:textColor="#000000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_postuler"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#074207"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Postuler"
            android:textColor="@color/white"
            android:textSize="19sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
